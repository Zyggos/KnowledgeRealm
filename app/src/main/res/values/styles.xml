<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AnswerButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:background">@drawable/answer_button_bg</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:text">@string/no_answer</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item maxLines="1" name="android:ellipsize">end</item>
    </style>
</resources>